						'</div>'+'</td>'+
						'<td>'+'<div class="col-sm">'+
						'<input id="product_quantity" name="order[product_attributes]['+random_string+'][quantity]" placeholder="Quantity" class="form-control product_quantity" required="true" value="" type="number"></div>'+
						'</div>'+'</td>'+
						'<td>'+'<div class="col-sm">'+
