<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css">
<script type="text/javascript" src="https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>

<p id="notice"><%= notice %></p>
<h5><%= t('.heading') %></h5>

<button type="button" class="btn btn-white btn-sm" data-toggle="modal" data-target="#exampleModalPopovers">
  Export
</button>

<div id="exampleModalPopovers" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalPopoversLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalPopoversLabel"><%= t('.export_product') %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>
      <div class="modal-body">
        <p><%= t('.modal_body') %></p>
        <hr>
       <%= t('.modal_body_text') %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-white btn-sm" data-dismiss="modal"><%= t('.close') %></button>
          <%= link_to t('.export'), export_product_path(format: "xlsx"),  class: "btn btn-primary btn-sm"  %>
             </div>
    </div>
  </div>
</div>
<%= link_to t('.create'), new_product_path, class: "btn btn-primary product_list float-right ", style: "font-weight: bold; margin-bottom:10px" %>

<table id="product_details" class="display">
        <thead>
            <tr class='user_list_row'>
                <th><%= t('products.form.title') %></th>
                <th><%= t('products.form.description') %></th>
                <th><%= t('products.form.product_type') %></th>
                <th><%= t('products.form.price') %></th>
                <th><%= t('products.form.sku') %></th>
                <th><%= t('products.form.barcode') %></th>
                <th><%= t('products.form.weight') %></th>
            </tr>
        </thead>
        <tbody>
         
        </tbody>
       
    </table>
    <script>
   $(document).ready(function(){

     $('#product_details').DataTable({
       "language": {
            "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/German.json"
        },
      paging: true,
        "scrollY": "520px",
        "scrollCollapse": true,
        "ordering": false,
        "info": true,
         searching: true,
        scroller: {
          rowHeight: 50
      },

      "processing": true,
      "serverSide": true,
      "ajax": "/products",
     
      "columns": [
      {"data": "title"},
      {"data": "body_html"},
      {"data": "product_type"},
      {"data": "price"},
      {"data": "sku"},
      {"data": "barcode"},
      {"data": "weight"}
      ]
    });
  });
</script>




